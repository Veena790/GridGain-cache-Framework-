@Secured(roles = { ESFConstants.SYSPREF_VIEW_ACCESS })
@PostMapping(value = "getNamesByBrokerOpAccount", consumes = "application/json", produces = "application/json")
public List<String> getNamesByBrokerOpAccount(@RequestBody String brokerOpAccount) throws Exception {
    if (brokerOpAccount == null || brokerOpAccount.isEmpty()) {
        throw new Exception("Broker OP Account cannot be null or empty");
    }

    List<String> names = eppService.getNamesByBrokerOpAccount(brokerOpAccount);

    if (names == null || names.isEmpty()) {
        throw new Exception("No names found for the provided Broker OP Account");
    }

    return names;
}




@Secured(roles = { ESFConstants.SYSPREF_VIEW_ACCESS })
@PostMapping(value = "getValuesByLegalEntityId", consumes = "application/json", produces = "application/json")
public List<String> getValuesByLegalEntityId(@RequestBody Map<String, String> params) throws Exception {
    String brokerOpAccount = params.get("brokerOpAccount");
    String legalEntityId = params.get("legalEntityId");

    if (brokerOpAccount == null || brokerOpAccount.isEmpty()) {
        throw new Exception("Broker OP Account cannot be null or empty");
    }
    if (legalEntityId == null || legalEntityId.isEmpty()) {
        throw new Exception("Legal Entity ID cannot be null or empty");
    }

    List<String> values = eppService.getValuesByLegalEntityId(brokerOpAccount, legalEntityId);

    if (values == null || values.isEmpty()) {
        throw new Exception("No values found for the provided Legal Entity ID and Broker OP Account");
    }

    return values;
}





@Secured(roles = { ESFConstants.SYSPREF_VIEW_ACCESS })
@PostMapping(value = "getValuesByJurisdictionId", consumes = "application/json", produces = "application/json")
public List<String> getValuesByJurisdictionId(@RequestBody Map<String, String> params) throws Exception {
    String brokerOpAccount = params.get("brokerOpAccount");
    String legalEntityId = params.get("legalEntityId");
    String jurisdictionId = params.get("jurisdictionId");

    if (brokerOpAccount == null || brokerOpAccount.isEmpty()) {
        throw new Exception("Broker OP Account cannot be null or empty");
    }
    if (legalEntityId == null || legalEntityId.isEmpty()) {
        throw new Exception("Legal Entity ID cannot be null or empty");
    }
    if (jurisdictionId == null || jurisdictionId.isEmpty()) {
        throw new Exception("Jurisdiction ID cannot be null or empty");
    }

    List<String> values = eppService.getValuesByJurisdictionId(brokerOpAccount, legalEntityId, jurisdictionId);

    if (values == null || values.isEmpty()) {
        throw new Exception("No values found for the provided Jurisdiction ID, Legal Entity ID, and Broker OP Account");
    }

    return values;
}