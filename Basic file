package com.example.support.controller;

import com.example.support.entity.*;
import com.example.support.service.*;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.*;

import java.util.List;
import java.util.Optional;

@RestController
@RequestMapping("/api/support")
public class SupportController {

    @Autowired
    private XrefAreaIdService xrefAreaIdService;

    @Autowired
    private XrefBrokerNumService xrefBrokerNumService;

    @Autowired
    private XrefProductLineService xrefProductLineService;

    @GetMapping("/area/all")
    public List<XrefAreaId> getAllAreas() {
        return xrefAreaIdService.findAll();
    }

    @GetMapping("/area/{id}")
    public Optional<XrefAreaId> getAreaById(@PathVariable Long id) {
        return xrefAreaIdService.findById(id);
    }

    @GetMapping("/broker/all")
    public List<XrefBrokerNum> getAllBrokers() {
        return xrefBrokerNumService.findAll();
    }

    @GetMapping("/broker/{id}")
    public Optional<XrefBrokerNum> getBrokerById(@PathVariable Long id) {
        return xrefBrokerNumService.findById(id);
    }

    @GetMapping("/product/all")
    public List<XrefProductLine> getAllProducts() {
        return xrefProductLineService.findAll();
    }

    @GetMapping("/product/{id}")
    public Optional<XrefProductLine> getProductById(@PathVariable Long id) {
        return xrefProductLineService.findById(id);
    }
}