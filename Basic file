import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

public class LoanServiceTest {

    private LoanService loanService;
    private String lastLoanId;

    @BeforeEach
    public void setUp() {
        loanService = new LoanService();  // Assuming LoanService doesn't require complex setup
        lastLoanId = "AAAAAA"; // Initial loan_id value
    }

    @Test
    public void testLoanIdGeneration() {
        // Generate the first loan ID
        String nextLoanId = loanService.getNextLoanId(lastLoanId);
        assertNotNull(nextLoanId);
        assertEquals("AAAAA1", nextLoanId);

        // Generate the second loan ID
        lastLoanId = nextLoanId; // Update to the latest generated loan ID
        nextLoanId = loanService.getNextLoanId(lastLoanId);
        assertEquals("AAAAA2", nextLoanId);

        // Generate another loan ID (repeat to test the sequence)
        lastLoanId = nextLoanId;
        nextLoanId = loanService.getNextLoanId(lastLoanId);
        assertEquals("AAAAA3", nextLoanId);

        // And so on...
    }
}